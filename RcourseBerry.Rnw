plot(x, dbeta((x-m)/(n-m),30,4), type="l")
lines(x, dnorm((x-m)/(n-m),30/34, sd=sqrt(120/(34^2*35))), 
      col="red")
text(525,4, "normal\napproximation", col="red")
text(560,5, "shifted\nbeta")
@
\end{frame}


