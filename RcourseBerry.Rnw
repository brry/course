for(y in 3:1)
   for(x in 1:3) {
      points(a+4*x-4, b+5*y-5, type=tp[i])
      text(3.5+4*x-4, 3+5*y-5, paste0("\"",tp[i],"\"")) ; i <- i+1 }
abline(v=c(5,9)-.5, h=c(4,9)+.75, col="gray" )
box("plot")
@
\end{frame}


